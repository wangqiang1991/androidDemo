<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE">

    <FrameLayout
        android:id="@+id/coupon_background"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:background="@mipmap/coupon_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_detail"
                    android:maxLength="16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TAB_GRAY"
                    android:textSize="@dimen/large"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/coupon_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/new_product_detail"
                android:textSize="@dimen/medium" />

                <TextView
                    android:id="@+id/coupon_type_string"
                    android:layout_centerVertical="true"
                    android:textColor="@color/nice_red"
                    android:textSize="@dimen/normal"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:id="@+id/coupon_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLength="40"
                android:maxLines="2"
                android:textColor="@color/new_product_detail"
                android:textSize="@dimen/small" />

        </LinearLayout>

        <ImageView
            android:id="@+id/checkbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/check_box_selector" />

    </FrameLayout>
</LinearLayout>