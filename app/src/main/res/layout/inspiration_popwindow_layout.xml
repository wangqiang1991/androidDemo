<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_pop"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/region_row"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="35dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:background="@drawable/inspiration_bt_background"
                android:enabled="false"
                android:text="区域"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/medium" />

            <com.hande.goochao.views.widget.tablayout.TabLayout
                android:id="@+id/pop_region_tabs"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:stretchColumns="*"
                app:tabIndicatorColor="@color/Black_Gray"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/Black_Gray"
                app:tabTextAppearance="@style/InspirationTabLayoutTextStyle"
                app:tabTextColor="@color/new_product_detail" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/style_row"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:background="@drawable/inspiration_bt_background"
                android:enabled="false"
                android:text="风格"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/medium" />

            <com.hande.goochao.views.widget.tablayout.TabLayout
                android:id="@+id/pop_style_tabs"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:stretchColumns="*"
                app:tabIndicatorColor="@color/Black_Gray"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/Black_Gray"
                app:tabTextAppearance="@style/InspirationTabLayoutTextStyle"
                app:tabTextColor="@color/new_product_detail" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kind_row"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:background="@drawable/inspiration_bt_background"
                android:enabled="false"
                android:text="类型"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/medium" />

            <com.hande.goochao.views.widget.tablayout.TabLayout
                android:id="@+id/pop_kind_tabs"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:stretchColumns="*"
                app:tabIndicatorColor="@color/Black_Gray"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/Black_Gray"
                app:tabTextAppearance="@style/InspirationTabLayoutTextStyle"
                app:tabTextColor="@color/new_product_detail" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/article_row"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:background="@drawable/inspiration_bt_background"
                android:enabled="false"
                android:text="类别"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/medium" />

            <com.hande.goochao.views.widget.tablayout.TabLayout
                android:id="@+id/pop_article_tabs"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:stretchColumns="*"
                app:tabIndicatorColor="@color/Black_Gray"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/Black_Gray"
                app:tabTextAppearance="@style/InspirationTabLayoutTextStyle"
                app:tabTextColor="@color/new_product_detail" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/house_type_row"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:background="@drawable/inspiration_bt_background"
                android:enabled="false"
                android:text="户型"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/medium" />

            <com.hande.goochao.views.widget.tablayout.TabLayout
                android:id="@+id/pop_house_type_tabs"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:stretchColumns="*"
                app:tabIndicatorColor="@color/Black_Gray"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/Black_Gray"
                app:tabTextAppearance="@style/InspirationTabLayoutTextStyle"
                app:tabTextColor="@color/new_product_detail" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/price_row"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:background="@drawable/inspiration_bt_background"
                android:enabled="false"
                android:text="价格"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/medium" />

            <com.hande.goochao.views.widget.tablayout.TabLayout
                android:id="@+id/pop_price_tabs"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:stretchColumns="*"
                app:tabIndicatorColor="@color/Black_Gray"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/Black_Gray"
                app:tabTextAppearance="@style/InspirationTabLayoutTextStyle"
                app:tabTextColor="@color/new_product_detail" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/mirror_inspiration_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent" />
</LinearLayout>
