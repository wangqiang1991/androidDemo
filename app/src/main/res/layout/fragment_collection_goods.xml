<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/WHITE"
    android:layout_height="match_parent">

    <com.hande.goochao.views.widget.GoochaoGridView
        android:id="@+id/collection_goods_grid_view"
        android:layout_width="match_parent"
        android:splitMotionEvents="false"
        android:layout_height="match_parent"
        android:numColumns="2">

    </com.hande.goochao.views.widget.GoochaoGridView>

    <com.hande.goochao.views.components.LoadFailView
        android:id="@+id/collection_goods_load_fail"
        android:visibility="gone"
        android:background="@color/WHITE"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.hande.goochao.views.components.LoadFailView>

    <com.hande.goochao.views.components.LoadingView
        android:id="@+id/collection_goods_loading"
        android:background="@color/WHITE"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.hande.goochao.views.components.LoadingView>

    <com.hande.goochao.views.components.refresh.NoDataTwoLineView
        android:id="@+id/collection_goods_noDataView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.refresh.NoDataTwoLineView>

</FrameLayout>