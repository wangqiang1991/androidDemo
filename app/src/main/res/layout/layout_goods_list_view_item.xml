<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/WHITE"
    android:paddingLeft="15dp"
    android:paddingTop="15dp">

    <FrameLayout
        android:id="@+id/img_frame"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/cover_view"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/cant_sent"
            android:background="#7Ff2f2f2"
            android:src="@mipmap/oval"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_frame"
        android:text="北欧系列实木沙发"
        android:textColor="@color/Black_Gray"
        android:textSize="@dimen/normal" />

    <TextView
        android:id="@+id/style_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:background="@drawable/order_good_item_style_bg"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_frame"
        android:text="北欧系列实木沙发"
        android:singleLine="true"
        android:textColor="@color/new_product_detail"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/sub_text"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/small"
        android:background="@drawable/order_good_item_style_bg"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_toRightOf="@+id/style_text"
        android:layout_below="@id/title_text"
        android:textColor="@color/new_product_detail"
        android:text="汉斯"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/img_frame"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥1501"
            android:textColor="@color/Black_Gray"
            android:textSize="@dimen/normal" />

        <TextView
            android:id="@+id/old_price"
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:textColor="@color/new_product_detail"
            android:textSize="@dimen/small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sale_out_price"
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:textColor="#F94E4E"
            android:textSize="@dimen/x_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="x 1"
        android:textColor="@color/new_product_detail"
        android:textSize="@dimen/normal" />


</RelativeLayout>