<?xml version="1.0" encoding="utf-8"?>
<com.hande.goochao.views.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hande.goochao.views.components.ZoomView
        android:id="@+id/picture_zoom_view"
        app:scaleView="@id/shadow_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/shadow_background"
        android:background="@drawable/shadow_scene"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/picture_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    </com.hande.goochao.views.components.ZoomView>

</com.hande.goochao.views.widget.SquareLayout>
