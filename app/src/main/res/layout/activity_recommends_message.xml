<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_recommends_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.hande.goochao.views.widget.GoochaoListView
        android:id="@+id/recommends_message_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:divider="@null"
        android:splitMotionEvents="false">

    </com.hande.goochao.views.widget.GoochaoListView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.hande.goochao.views.components.NoDataView
        android:id="@+id/recommends_message_noDataView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.NoDataView>

    <com.hande.goochao.views.components.LoadFailView
        android:id="@+id/recommends_message_load_fail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.LoadFailView>


    <com.hande.goochao.views.components.LoadingView
        android:id="@+id/recommends_message_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE">

    </com.hande.goochao.views.components.LoadingView>

</RelativeLayout>