<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hande.goochao.views.components.LoadingView
        android:id="@+id/new_shop_mall_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE">

    </com.hande.goochao.views.components.LoadingView>

    <com.hande.goochao.views.components.LoadFailView
        android:id="@+id/new_shopping_mall_load_fail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.LoadFailView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="商品品类"
        android:textColor="@color/Black_Gray"
        android:textSize="@dimen/xx_large"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/Line_DarkGray_Color" />

    <com.hande.goochao.views.components.ExpandableView
        android:id="@+id/expandable_view"
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:clipToPadding="false"
        android:layout_height="match_parent">

    </com.hande.goochao.views.components.ExpandableView>

</LinearLayout>
