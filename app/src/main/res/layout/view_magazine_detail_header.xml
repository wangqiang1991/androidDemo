<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/magazine_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/magazine_title"
        android:textSize="@dimen/xx_large"
        android:textColor="@color/Black_Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray_add"
        android:textSize="@dimen/medium"
        android:id="@+id/magazine_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@color/Line_DarkGray_Color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.hande.goochao.views.components.ArticleWebView
        android:id="@+id/detail_webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/Line_Color">
    </LinearLayout>

    <TextView
        android:id="@+id/comments_number"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/Black_Gray"
        android:textSize="@dimen/large"
        android:gravity="left|center_vertical"
        android:background="@drawable/magazine_border_bottom"
        android:padding="15dp"/>

    <com.hande.goochao.views.components.refresh.NoDataTwoLineView
        android:id="@+id/magazine_noDataView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.refresh.NoDataTwoLineView>

    <com.hande.goochao.views.components.LoadFailView
        android:id="@+id/load_fail_view_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.LoadFailView>
</LinearLayout>
