<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Line_Color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/system_message_date"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/new_product_detail"
        android:textSize="@dimen/medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/information_center_item_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_dingdanzhuangtaitixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="订单状态提醒"
            android:textColor="@color/Black_Gray"
            android:textSize="@dimen/large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <com.hande.goochao.views.components.ZoomView
                android:id="@+id/system_message_zoom_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:scaleView="@id/system_message_cover">

                <ImageView
                    android:id="@+id/system_message_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.hande.goochao.views.components.ZoomView>

            <TextView
                android:id="@+id/system_message_desc"
                android:maxLines="4"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal"
                android:textColor="@color/TAB_GRAY"
                android:layout_marginTop="5dp">

            </TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Line_DarkGray_Color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_chakanxiangqing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="查看详情"
                android:textColor="@color/Black_Gray"
                android:textSize="@dimen/medium" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/information_center_right" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>