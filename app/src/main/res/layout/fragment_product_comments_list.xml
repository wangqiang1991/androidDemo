<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commentsListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/product_comments_list_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hande.goochao.views.widget.GoochaoGridView
            android:id="@+id/productCommentListGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="1">

        </com.hande.goochao.views.widget.GoochaoGridView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.hande.goochao.views.components.NoDataView
        android:id="@+id/comment_no_data_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.NoDataView>

    <com.hande.goochao.views.components.LoadingView
        android:id="@+id/comment_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE">

    </com.hande.goochao.views.components.LoadingView>

    <com.hande.goochao.views.components.LoadFailView
        android:id="@+id/comment_fragment_load_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.LoadFailView>
</FrameLayout>