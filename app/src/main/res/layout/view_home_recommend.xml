<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/recommend_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/Line_Color">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="精选推荐"
                android:textColor="@color/Default_Gray"
                android:textSize="@dimen/normal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/Black_Gray"
                android:background="@drawable/border_line_black"
                android:textSize="@dimen/x_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <com.hande.goochao.views.widget.SquareLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <com.hande.goochao.views.components.ZoomView
                android:id="@+id/recommend_goods_zoom_view"
                app:scaleView="@id/home_recommend_goodsImg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_recommend_goodsImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            </com.hande.goochao.views.components.ZoomView>

            </com.hande.goochao.views.widget.SquareLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_recommend_goodsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:textColor="@color/Black_Gray"
                    android:textSize="@dimen/large" />

                <TextView
                    android:id="@+id/home_recommend_goodsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:textColor="@color/Black_Gray"
                    android:textSize="@dimen/normal" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/home_recommend_goodsBuy"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="立即购买"
                android:textColor="@color/WHITE"
                android:background="@color/Black_Gray"
                android:textSize="@dimen/normal" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommend_magazine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/Line_Color">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="精选期刊"
                android:textColor="@color/Default_Gray"
                android:textSize="@dimen/normal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/Black_Gray"
                android:background="@drawable/border_line_black"
                android:textSize="@dimen/x_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.hande.goochao.views.components.ZoomView
                android:id="@+id/recommend_magazine_zoom_view"
                app:scaleView="@id/home_recommend_magazineImg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_recommend_magazineImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </com.hande.goochao.views.components.ZoomView>

            <TextView
                android:id="@+id/home_recommend_magazineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="end"
                android:gravity="left"
                android:textColor="@color/Default_Gray"
                android:textSize="@dimen/normal" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommend_scene"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/Line_Color">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/home_linear_gradient"
            android:layout_gravity="top"
            android:layout_height="32dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="精选场景"
                android:textColor="@color/Default_Gray"
                android:textSize="@dimen/normal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/Black_Gray"
                android:background="@drawable/border_line_black"
                android:textSize="@dimen/x_small" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            >

            <com.hande.goochao.views.widget.SquareLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <com.hande.goochao.views.components.ZoomView
                android:id="@+id/recommend_scene_zoom_view"
                app:scaleView="@id/home_recommend_sceneImg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_recommend_sceneImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            </com.hande.goochao.views.components.ZoomView>

            </com.hande.goochao.views.widget.SquareLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/home_linear_gradient"
                android:layout_gravity="bottom"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_recommend_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/WHITE"
                    android:textSize="@dimen/medium"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_tag"
                    android:layout_marginRight="1dp"/>

                <TextView
                    android:id="@+id/home_recommend_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textColor="@color/WHITE"
                    android:textSize="@dimen/medium"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
