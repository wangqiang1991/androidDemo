<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/search_edit_circular_draw"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/new_icon_search_pressed" />

        <TextView
            android:id="@+id/search_edit_shop_right"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:text="搜索商品、图片"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/gray_add"
            android:textSize="@dimen/normal">

        </TextView>

    </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/cart_btn_shop_right"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shop_cart"/>

        <com.hande.goochao.commons.controller.BadgeView
            android:id="@+id/cart_count_shop_view"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="@dimen/x_small" />

    </FrameLayout>

</LinearLayout>