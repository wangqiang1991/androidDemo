<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/mirror_view_all"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:alpha="0"
        android:background="@color/Black_Gray"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/WHITE"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#f9f9f9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看类型"
                android:layout_centerInParent="true"
                android:textSize="@dimen/x_large" />

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:id="@+id/closeAll"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_close_fine"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/LINE_GRAY" />

        <LinearLayout
            android:paddingLeft="20dp"
            android:id="@+id/text_all1"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:textColor="@color/BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="@dimen/large" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/type_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/icon_selected"
                android:visibility="gone"></ImageView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/LINE_GRAY" />

        <LinearLayout
            android:paddingLeft="20dp"
            android:id="@+id/text_all2"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:textColor="@color/BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家具定制"
                android:textSize="@dimen/large" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/area_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/icon_selected"
                android:visibility="gone"></ImageView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/LINE_GRAY" />

        <LinearLayout
            android:paddingLeft="20dp"
            android:id="@+id/text_all3"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:textColor="@color/BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="场景售卖"
                android:textSize="@dimen/large" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/style_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/icon_selected"
                android:visibility="gone">

            </ImageView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
