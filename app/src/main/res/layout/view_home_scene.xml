<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_scene"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.hande.goochao.views.widget.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.hande.goochao.views.components.ZoomView
            android:id="@+id/home_scene_zoom_view"
            app:scaleView="@id/home_recommend_sceneImg"
            app:scale="0.9"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_recommend_sceneImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.hande.goochao.views.components.ZoomView>

    </com.hande.goochao.views.widget.SquareLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/home_linear_gradient"
        android:layout_gravity="bottom"
        android:layout_height="32dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/home_recommend_title"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_tag"
            android:layout_marginRight="1dp"/>

        <TextView
            android:id="@+id/home_recommend_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/medium"/>

    </LinearLayout>

</FrameLayout>
