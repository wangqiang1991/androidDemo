<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/WHITE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hande.goochao.views.components.ZoomView
        android:id="@+id/space_detail_zoom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:scaleView="@id/shadow_view">

        <FrameLayout
            android:id="@+id/shadow_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/recommend_scene_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/sign_view"
                android:background="@color/alpha_30_999999"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:id="@+id/recommend_scene_title"
                    android:textSize="@dimen/medium"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/WHITE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_toLeftOf="@id/scene_tag_number"
                    android:id="@+id/tag_icon"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/new_icon_tag_white_line"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/scene_tag_number"
                    android:textColor="@color/WHITE"
                    android:textSize="@dimen/medium"
                    android:layout_gravity="bottom|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </FrameLayout>

    </com.hande.goochao.views.components.ZoomView>


</LinearLayout>
