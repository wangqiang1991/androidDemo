<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Line_Color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/load_fail_view"
        android:background="#425d79"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/nav_btn_back_default_white" />

            </LinearLayout>


            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:lines="1"
                android:text="订单详情"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/x_large"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gai_bi_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="该笔订单已完成"
                    android:textColor="@color/WHITE"
                    android:textSize="@dimen/x_large" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="如有疑问请联系客服"
                    android:textColor="@color/WHITE"
                    android:textSize="@dimen/normal" />

            </LinearLayout>

            <Button
                android:id="@+id/btnContactService"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/order_detail_button_bg"
                android:text="联系客服"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/small" />

            <Button
                android:id="@+id/btnApplyAfterService"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/order_detail_button_bg"
                android:text="申请售后"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/small"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnPreviewAfterSale"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/order_detail_button_bg"
                android:text="售后详情"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/small"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/WHITE"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/yun_fei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="运费"
                android:textColor="@color/new_product_detail"
                android:textSize="@dimen/normal" />


            <TextView
                android:id="@+id/txtExpressMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="¥0.00"
                android:textColor="@color/new_product_detail"
                android:textSize="@dimen/normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/you_hui_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="优惠券"
                android:textColor="@color/new_product_detail"
                android:textSize="@dimen/normal" />


            <TextView
                android:id="@+id/txtSaleMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="— 0"
                android:textColor="@color/new_product_detail"
                android:textSize="@dimen/normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ding_dan_zong_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="订单总价"
                android:textColor="@color/Black_Gray"
                android:textSize="@dimen/normal" />


            <TextView
                android:id="@+id/txtOrderMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="¥0.00"
                android:textColor="@color/Black_Gray"
                android:textSize="@dimen/normal" />

        </RelativeLayout>

    </LinearLayout>


    <ScrollView
        android:layout_above="@id/layBottom"
        android:layout_below="@id/layTop"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layContent"
            android:background="@color/Line_Color"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/WHITE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/location" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtReallyName"
                            android:maxLength="16"
                            android:maxWidth="175dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="王大锤"
                            android:textColor="@color/Black_Gray"
                            android:textSize="@dimen/large" />

                        <TextView
                            android:id="@+id/txtPhone"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="18728478528"
                            android:textColor="@color/Black_Gray"
                            android:textSize="@dimen/large" />
                    </RelativeLayout>

                    <TextView
                        android:layout_marginBottom="15dp"
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="四川省成都市锦江区沙河上铺街168号沙河中心A 座2701"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/normal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@color/WHITE"
                android:layout_width="match_parent"
                android:layout_height="1dp">

                <View
                    android:id="@+id/middle_line"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="54dp"
                    android:background="@color/Line_DarkGray_Color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/remark_view"
                android:background="@color/WHITE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/remarks" />

                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtRemark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到货请帮忙搬上楼，谢谢!"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/normal" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/Line_Color"/>

            <LinearLayout
                android:id="@+id/layOrderGoods"
                android:background="@color/WHITE"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/WHITE"/>

            </LinearLayout>

            <View
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="1dp"
                android:background="@color/WHITE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:background="@color/WHITE">

                <TextView
                    android:id="@+id/goods_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:text="1 件商品总价"
                    android:textColor="@color/TAB_GRAY"
                    android:textSize="@dimen/normal" />

                <TextView
                    android:id="@+id/goods_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:text="¥ 45"
                    android:textColor="@color/TAB_GRAY"
                    android:textSize="@dimen/normal" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/WHITE"
                android:orientation="vertical"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ding_dan_bian_hao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="订单编号:"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                    <ImageView
                        android:id="@+id/btnCopy"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toLeftOf="@+id/txtOrderNumber"
                        android:src="@mipmap/copy" />

                    <TextView
                        android:id="@+id/txtOrderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="2027420420206787"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/xia_dan_shi_jian"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单时间:"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/txtPayDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="2018-06-16 15：48"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/fa_huo_shi_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发货时间:"
                        android:layout_centerVertical="true"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/txtDeliverDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="2018-06-16 17：48"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/pei_song_fang_shi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送方式:"
                        android:layout_centerVertical="true"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/txtExpressName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="顺丰陆运"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/yun_dan_bian_hao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="运单编号:"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                    <ImageView
                        android:id="@+id/btnCopySecond"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toLeftOf="@+id/txtExpressNo"
                        android:src="@mipmap/copy" />

                    <TextView
                        android:id="@+id/txtExpressNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="1654231324666"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/shou_huo_shi_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货时间:"
                        android:layout_centerVertical="true"
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/txtReceiveDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="2018-06-18 16:08 "
                        android:textColor="@color/new_product_detail"
                        android:textSize="@dimen/medium" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.hande.goochao.views.components.LoadFailView
        android:id="@+id/load_fail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.LoadFailView>

    <com.hande.goochao.views.components.LoadingView
        android:background="@color/WHITE"
        android:id="@+id/finish_order_detail_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.hande.goochao.views.components.LoadingView>

</RelativeLayout>