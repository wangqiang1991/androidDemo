<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.hande.goochao.views.activity.PaySuccessActivity">

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/paysuccess_pic"/>

    <TextView
        android:textColor="@color/BLACK"
        android:textSize="@dimen/large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:text="付款成功！"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/DEFAULT_GRAY"
        android:textSize="@dimen/normal"
        android:layout_marginTop="8dp"
        android:text="我们将尽快为您发货"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/go_order_btn"
            android:background="@color/Black_Gray"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/normal"
            android:layout_marginRight="50dp"
            android:text="查看订单"/>

        <TextView
            android:id="@+id/go_home_btn"
            android:background="@drawable/black_border_draw"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black_Gray"
            android:textSize="@dimen/normal"
            android:text="前往首页"/>

    </LinearLayout>

</LinearLayout>
