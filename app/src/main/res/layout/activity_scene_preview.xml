<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hande.goochao.commons.views.gallery.HackyViewPager
        android:id="@+id/hack_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.hande.goochao.commons.views.gallery.HackyViewPager>

    <View
        android:id="@+id/top_layer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#13000000"></View>

    <View
        android:id="@+id/bottom_layer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#13000000"></View>

    <RelativeLayout
        android:id="@+id/button_layout"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_btn_back_default_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:layout_marginLeft="-5dp"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/x_large" />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/collection_btn"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_icon_collect_def"/>

            <ImageView
                android:id="@+id/share_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_icon_share_def"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_icon_more"/>

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large"
                android:textColor="@color/WHITE"
                android:text="了解更多"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/download_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tab_icon_download_def"/>

    </RelativeLayout>

</RelativeLayout>