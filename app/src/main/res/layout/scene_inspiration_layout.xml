<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.hande.goochao.views.components.refresh.MySmartRefreshLayout
        android:id="@+id/scene_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hande.goochao.views.widget.GoochaoGridView
            android:id="@+id/scene_inspiration_grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/WHITE"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:splitMotionEvents="false"
            android:verticalSpacing="5dp">

        </com.hande.goochao.views.widget.GoochaoGridView>

    </com.hande.goochao.views.components.refresh.MySmartRefreshLayout>

    <com.hande.goochao.views.components.LoadFailView
        android:id="@+id/scene_inspiration_load_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.LoadFailView>

    <com.hande.goochao.views.components.LoadingView
        android:id="@+id/inspiration_scene_loading"
        android:background="@color/WHITE"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.hande.goochao.views.components.LoadingView>

    <com.hande.goochao.views.components.refresh.NoDataTwoLineView
        android:id="@+id/scene_noDataView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.refresh.NoDataTwoLineView>

</RelativeLayout>
