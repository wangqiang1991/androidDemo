<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="horizontal"
    tools:context="com.hande.goochao.views.activity.ForgetPasswordActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/phone_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <EditText
                android:id="@+id/phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/forget_pwd_border"
                android:drawableLeft="@mipmap/icon_phone_gray"
                android:drawablePadding="8dp"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:inputType="phone"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:textColor="@color/Black_Gray"
                android:textColorHint="@color/Black_Gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/normal" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/verification_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_layout"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/verification"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/forget_pwd_border"
                android:drawableLeft="@mipmap/icon_verifyingcode_gray"
                android:drawablePadding="8dp"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:textColor="@color/Black_Gray"
                android:textColorHint="@color/Black_Gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/normal" />

            <TextView
                android:id="@+id/verification_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="7dp"
                android:background="@color/Default_Gray"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="8dp"
                android:text="发送验证码"
                android:textColor="@color/WHITE" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/password_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/verification_layout"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/forget_pwd_border"
                android:drawableLeft="@mipmap/icon_lock_gary"
                android:drawablePadding="8dp"
                android:hint="设置6-20位密码"
                android:inputType="textPassword"
                android:paddingBottom="12dp"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:textColor="@color/Black_Gray"
                android:textColorHint="@color/Black_Gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/normal" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/login_btn_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_layout"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/btnResetPwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/Black_Gray"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="重置密码"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/large" />
        </FrameLayout>

    </RelativeLayout>

</LinearLayout>
