<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp">

    <com.hande.goochao.views.widget.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <com.hande.goochao.views.components.ZoomView
        android:id="@+id/space_detail_zoom_view"
        app:scaleView="@id/space_detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/space_detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </com.hande.goochao.views.components.ZoomView>

    </com.hande.goochao.views.widget.SquareLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/home_linear_gradient"
        android:layout_gravity="bottom"
        android:layout_height="32dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/space_detail_title"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_tag"
            android:layout_marginRight="1dp"/>

        <TextView
            android:id="@+id/space_detail_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="18dp"
            android:layout_gravity="center"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/medium"/>

    </LinearLayout>

</FrameLayout>
