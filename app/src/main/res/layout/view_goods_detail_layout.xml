<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/close_goods_detail"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/show_goods_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@color/WHITE"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:paddingLeft="120dp"
                android:paddingTop="20dp">

                <TextView android:id="@+id/goods_style_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/Default_Gray"
                    android:textSize="@dimen/medium" />

                <TextView android:id="@+id/goods_style_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/Line_Color" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/tag_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">

            </com.zhy.view.flowlayout.TagFlowLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                >

                <TextView  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量选择"
                    android:textColor="@color/Default_Gray"
                    android:textSize="@dimen/medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/goods_count"
                    android:textColor="@color/Black_Gray"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">

                <TextView android:id="@+id/minus_goods"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="—"
                    android:gravity="center"
                    android:textSize="@dimen/normal"
                    android:background="@color/Line_Color"
                    android:textColor="@color/BLACK"
                    />

                <TextView android:id="@+id/goods_number"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="@dimen/normal"
                    android:background="#fafafa"
                    android:textColor="@color/BLACK"
                    />

                <TextView android:id="@+id/add_goods"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="＋"
                    android:gravity="center"
                    android:textSize="@dimen/normal"
                    android:background="@color/Line_Color"
                    android:textColor="@color/BLACK"
                    />

            </LinearLayout>

        </LinearLayout>

        <ImageView android:id="@+id/goods_style_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/goods_detail_background"
            android:layout_marginLeft="16dp"
             />

        <ImageView android:id="@+id/close_goods"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:background="@mipmap/goods_arrow_down" />

    </FrameLayout>

    <TextView
        android:id="@+id/goods_off"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/No_Data_Color"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/WHITE"
        android:textSize="@dimen/large" />

    <TextView
        android:id="@+id/join_to_shopping_cat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/Black_Gray"
        android:gravity="center"
        android:text="加入购物车"
        android:textColor="@color/WHITE"
        android:textSize="@dimen/large" />

    <TextView
        android:id="@+id/buy_now"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/Black_Gray"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="@color/WHITE"
        android:textSize="@dimen/large" />

</RelativeLayout>
