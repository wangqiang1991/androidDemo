<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hande.goochao.views.components.LoadingView
        android:id="@+id/new_shop_mall_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE">

    </com.hande.goochao.views.components.LoadingView>

    <com.hande.goochao.views.components.LoadFailView
        android:id="@+id/new_shopping_mall_load_fail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:visibility="gone">

    </com.hande.goochao.views.components.LoadFailView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/LINE_GRAY"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/first_category_list"
            android:divider="@null"
            android:layout_width="90dp"
            android:scrollbars="none"
            android:layout_height="match_parent">

        </ListView>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/Line_DarkGray_Color"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.hande.goochao.views.widget.GoochaoGridView
                android:id="@+id/second_category_list"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="20dp"
                android:horizontalSpacing="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </com.hande.goochao.views.widget.GoochaoGridView>

            <View
                android:id="@+id/space_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <com.hande.goochao.views.widget.GoochaoListView
                android:id="@+id/third_category_list"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:divider="@null"
                android:scrollbars="none"
                android:dividerHeight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">

            </com.hande.goochao.views.widget.GoochaoListView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
