<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE">

    <LinearLayout
        android:background="@drawable/shadow_design_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.hande.goochao.views.widget.RoundImageView
            android:id="@+id/premises_item_cover"
            android:paddingBottom="0.5dp"
            android:paddingLeft="0.3dp"
            android:paddingTop="0.2dp"
            android:layout_width="110dp"
            android:layout_height="85dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/premises_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textColor="@color/Black_Gray"
                android:textSize="@dimen/large" />

            <TextView
                android:id="@+id/premises_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_fanganshuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="方案数量"
                    android:textColor="@color/TAB_GRAY"
                    android:textSize="@dimen/medium" />

                <TextView
                    android:id="@+id/plan_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#F98484"
                    android:textSize="@dimen/medium" />

                <TextView
                    android:id="@+id/txt_huxingshuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="户型数量"
                    android:textColor="@color/TAB_GRAY"
                    android:textSize="@dimen/medium" />

                <TextView
                    android:id="@+id/room_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#F98484"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>